<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/simple_view_margin_side"
        android:layout_marginRight="@dimen/simple_view_margin_side"
        android:layout_marginTop="@dimen/simple_view_margin_top_list"
        android:layout_marginBottom="4dp"
        style="@style/TitleRegularBlue"
        android:id="@+id/fsv_name"
        android:text="Name"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/simple_view_text_height"
        android:layout_marginLeft="@dimen/simple_view_margin_side"
        android:layout_marginRight="@dimen/simple_view_margin_side"
        style="@style/BodyRegularBlack"
        android:id="@+id/fsv_description1"
        android:text="Description 1 (main rubric, for example)"
        android:layout_below="@id/fsv_name"
        android:ellipsize="end"
        android:maxLines="1"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/simple_view_text_height"
        android:layout_marginLeft="@dimen/simple_view_margin_side"
        android:layout_marginRight="@dimen/simple_view_margin_side"
        style="@style/BodyRegularGray"
        android:id="@+id/fsv_description2"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Description 2 (floor, for example)"
        android:layout_below="@+id/fsv_description1"
        />

    <View
        android:id="@+id/dummy"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/fsv_description2"
        android:layout_marginBottom="12dp"
        />

</RelativeLayout >